    <script>
        function val() {
            var name = document.forms["myForm"]["name"].value.trim();
            var email = document.forms["myForm"]["email"].value.trim();
            var password = document.getElementById("password").value;
            // var repassword = document.getElementById("re-password").value;
            var cnic = document.forms["myForm"]["cnic"].value.trim();
            var mobile = document.forms["myForm"]["mobile"].value.trim();
            if (name === "" && email === "" && password === "" && repassword === "" && cnic === "" && mobile === "") {
                document.getElementById("nam_err").innerHTML = "Enter Your Name";
                document.getElementById("email_err").innerHTML = "Enter Your Email";
                document.getElementById("pass_err").innerHTML = "Enter Your Password";
                // document.getElementById("re_pass_err").innerHTML = "Enter Your Confirm password";
                document.getElementById("ids_err").innerHTML = "Enter Your CNIC";
                document.getElementById("mobile_err").innerHTML = "Enter Your Mobile";
                return false;
            }
            if (name === "") {
                document.getElementById("nam_err").innerHTML = "Enter Your Name";
                return false;
            }
            else if (email === "") {
                document.getElementById("nam_err").innerHTML = "";
                document.getElementById("email_err").innerHTML = "Enter Your Email";
                return false;
            }
            else if (password === "") {
                document.getElementById("nam_err").innerHTML = "";
                document.getElementById("email_err").innerHTML = "";
                document.getElementById("pass_err").innerHTML = "Enter your password";
                return false;
            }
            else if (password.length < 8) {
                document.getElementById("nam_err").innerHTML = "";
                document.getElementById("email_err").innerHTML = "";
                document.getElementById("pass_err").innerHTML = "Password must be equal than or greater than 8";
                return false;
            }
            else if (mobile === "") {
                document.getElementById("pass_err").innerHTML = "";
                document.getElementById("mobile_err").innerHTML = "Enter Your Mobile";
                return false;
            }
            else if (mobile.length < 11 || mobile.length > 11) {
                document.getElementById("nam_err").innerHTML = "";
                document.getElementById("email_err").innerHTML = "";
                document.getElementById("pass_err").innerHTML = "";
                document.getElementById("mobile_err").innerHTML = "Your mobile must be 11 digits";
                return false;
            }
            else if (cnic === "") {
                document.getElementById("mobile_err").innerHTML = "";
                document.getElementById("ids_err").innerHTML = "Enter Your CNIC";
                return false;
            }
            else if (cnic.length < 13 || cnic.length > 13) {
                document.getElementById("nam_err").innerHTML = "";
                document.getElementById("email_err").innerHTML = "";
                document.getElementById("pass_err").innerHTML = "";
                document.getElementById("mobile_err").innerHTML = "";
                document.getElementById("ids_err").innerHTML = "Your CNIC must be 13 digits";
                return false;
            }
            else {
                document.getElementById("ids_err").innerHTML = "";
            }

        }
    </script>
